# MongoDB connection string (Mongo Atlas)
MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/mydb?retryWrites=true&w=majority

# JWT secrets
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Frontend origin (for CORS)
FRONTEND_BASE_URL=https://your-frontend.vercel.app

# SMTP (optional - for verification / reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Optional: PORT (platforms set this automatically)
# PORT=5000
